<h2> Lista de Jogadores </h2>
<% if @players.any? %>
<div class="table-responsive">
  <table class="table table-striped">
    <tr>
      <th>Nome</th>
      <th>Pontos</th>
    </tr>
    <% @players.each do |player| %>
      <tr>
        <td>
          <%= link_to player.name, player_path(player) %>
        </td>
        <td>
          <%= player.points %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
<% else %>
  <p>
    Nenhum jogador cadastrado
  </p>
<% end %>