<h3> <%= @player.name %> </h3>

<% if @player.point_entries.any? %>
<table>
  <tr>
    <th>Data</th>
    <th>Pontos</th>
  </tr>
  <% @player.point_entries.each do |point_entry| %>
    <tr>
      <td>
        <%= point_entry.date %>
      </td>
      <td>
        <%= point_entry.value %>
      </td>
    </tr>
  <% end %>
</table>
<% else %>
<p>
  Jogador não possui pontuações
</p>
<% end %>